{
  "name": "@gv-sh/specgen-app",
  "version": "1.0.1",
  "description": "Complete SpecGen application with server, admin, and user interfaces",
  "main": "index.js",
  "bin": {
    "specgen-app": "./bin/cli.js"
  },
  "scripts": {
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "dev": "chmod +x scripts/dev.sh && ./scripts/dev.sh",
    "build": "cd admin && PUBLIC_URL=/admin npm run build && cd ../user && npm run build",
    "start": "cd server && npm start",
    "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "deploy:ec2": "chmod +x scripts/deploy-ec2.sh && ./scripts/deploy-ec2.sh",
    "backup:database": "chmod +x scripts/backup-database.sh && ./scripts/backup-database.sh",
    "restore:database": "chmod +x scripts/restore-database.sh && ./scripts/restore-database.sh",
    "sync-versions": "node scripts/sync-versions.js",
    "postinstall": "chmod +x bin/cli.js"
  },
  "dependencies": {
    "@gv-sh/specgen-server": "0.14.0",
    "@gv-sh/specgen-admin": "0.12.2",
    "@gv-sh/specgen-user": "1.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "author": "gv-sh",
  "publishConfig": {
    "access": "public"
  }
}
